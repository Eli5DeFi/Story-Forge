# Story-Forge Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/storyforge

# Redis (for Bull queues and caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# AI Services
ANTHROPIC_API_KEY=sk-ant-api...
OPENAI_API_KEY=sk-...

# Image Generation
DALLE_API_KEY=sk-...

# Blockchain Configuration
RPC_URL=https://base-sepolia.g.alchemy.com/v2/your-api-key
ORACLE_PRIVATE_KEY=0x...

# Contract Addresses
BETTING_POOL_ADDRESS=0x...
NFT_ADDRESS=0x...
TREASURY_ADDRESS=0x...

# Token Addresses (Base Sepolia)
USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e
USDT_ADDRESS=0x...

# IPFS (Pinata)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# Arweave (optional, for permanent storage)
ARWEAVE_KEY=your-arweave-key
